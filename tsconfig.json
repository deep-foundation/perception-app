{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2017",
      "es6",
      "es7",
      "ES2019"
    ],
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "isolatedModules": true,
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": false,
    "paths": {
      "~*": ["./node_modules/open-chakra/src/*"]
    }
  },
  "types": [
    "chrome"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/types/**/*.ts",
    ".next/types/**/*.ts",
    "node_modules/open-chakra/src"
  ],
  "exclude": [
    "node_modules",
    "payments",
    "electron"
  ]
}
